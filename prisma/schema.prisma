generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Professor {
  id          Int      @id @default(autoincrement())
  nome        String
  email       String   @unique
  senha       String
  instituicao String
  alunos      Aluno[]  @relation
}


model Aluno {
  id        Int      @id @default(autoincrement())
  nome      String
  idade     Int
  turma     String
  professor Professor @relation(fields: [professorId], references: [id])
  professorId Int
}
